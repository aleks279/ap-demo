= form_for [:admin, @category] do |f|
  - if @category.errors.any?
    #errors
      %p
        = "#{pluralize(@category.errors.count, 'Error')} prevented this record from being saved."
      %ul
        - @category.errors.full_messages.each do |error|
          %li= error

  = f.text_field :name
  = f.submit